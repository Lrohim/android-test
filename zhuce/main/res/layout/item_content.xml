<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:id="@+id/goods_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/good_name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/goods_image"
            android:layout_toEndOf="@+id/goods_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goods_sale"
            android:textColor="#989898"
            android:textSize="15sp"
            android:layout_below="@+id/good_name"
            android:layout_alignLeft="@+id/good_name"
            android:layout_alignStart="@+id/good_name"
            android:layout_marginTop="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/good_price"
            android:textColor="#ff2e2e"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/goods_image"
            android:layout_alignLeft="@+id/goods_sale"
            android:layout_alignStart="@+id/goods_sale" />
    </RelativeLayout>
</LinearLayout>