<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bill_toolbar"
        android:textAlignment="center"
        android:titleTextColor="#FFF"
        android:background="@color/colorPrimary"></android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bill_account"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bill_account"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:text="取消" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:text="立即支付" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bill_toolbar"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="67dp"
        android:text="订单状态" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="42dp"
        android:text="预付房款" />

    <TextView
        android:id="@+id/bill_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textColor="#FFBA00"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:text="TextView" />

    <TextView
        android:id="@+id/fuck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/bill_condition"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="订单跟踪  >" />

    <TextView
        android:id="@+id/bill_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/bill_condition"
        android:layout_alignStart="@+id/bill_condition"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fuck"
        android:layout_alignStart="@+id/fuck"
        android:layout_alignTop="@+id/bill_spent"
        android:text="费用明细  >" />

    <TextView
        android:id="@+id/bill_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="47dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/bill_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bill_location"
        android:layout_alignStart="@+id/bill_location"
        android:layout_below="@+id/bill_location"
        android:layout_marginTop="102dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/bill_kind"
        android:layout_alignStart="@+id/bill_kind"
        android:layout_marginBottom="54dp"
        android:text="入住时间：" />

    <TextView
        android:id="@+id/date_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="离店时间："
        android:layout_alignBaseline="@+id/date_in"
        android:layout_alignBottom="@+id/date_in"
        android:layout_toRightOf="@+id/bill_account"
        android:layout_toEndOf="@+id/bill_account"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/date_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:text="TextView" />

    <TextView
        android:id="@+id/bill_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bill_spent"
        android:layout_alignStart="@+id/bill_spent"
        android:layout_alignTop="@+id/bill_kind"
        android:text="TextView" />

</RelativeLayout>
