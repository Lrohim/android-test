<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#9d9d9d"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    app:cardCornerRadius="10dp"
    app:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="17dp"
            android:text="TextView"
            android:textColor="#FFF5" />

        <TextView
            android:id="@+id/room_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/hotel_name"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:text="TextView"
            android:textColor="#fb6f22" />

        <TextView
            android:id="@+id/date_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_condition"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/hotel_name"
            android:layout_toRightOf="@+id/hotel_name"
            android:text="TextView" />

        <TextView
            android:id="@+id/date_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/date_in"
            android:layout_alignStart="@+id/date_in"
            android:layout_below="@+id/date_in"
            android:layout_marginTop="48dp"
            android:text="TextView" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"
            android:layout_alignBaseline="@+id/pay"
            android:layout_alignBottom="@+id/pay"
            android:layout_toLeftOf="@+id/date_in"
            android:layout_toStartOf="@+id/date_in" />

        <Button
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fb6f22"
            android:text=" 立即支付"
            android:textColor="#FFF"
            android:layout_below="@+id/date_last"
            android:layout_alignLeft="@+id/pay_condition"
            android:layout_alignStart="@+id/pay_condition"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/pay_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/room_spent"
            android:layout_alignStart="@+id/room_spent"
            android:layout_below="@+id/room_spent"
            android:text="TextView"
            android:textColor="#fb6f22" />
    </RelativeLayout>

</android.support.v7.widget.CardView>


