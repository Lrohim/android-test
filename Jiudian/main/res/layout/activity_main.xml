<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context="com.example.toshiba.jiudian.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:titleTextColor="#FFF"
        android:background="@color/colorPrimary"></android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/show_out"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginBottom="213dp"
        android:layout_marginLeft="202dp"
        android:text="离店"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="202dp" />

    <TextView
        android:id="@+id/show_in"
        android:layout_width="186dp"
        android:layout_height="47dp"
        android:layout_marginBottom="213dp"
        android:layout_marginLeft="8dp"
        android:text="入住"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:layout_marginBottom="320dp"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/point_list"
        android:layout_width="220dp"
        android:layout_height="24dp"
        android:layout_marginBottom="320dp"
        android:layout_marginRight="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="80dp">

        <LinearLayout
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/show_keyword"
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:layout_marginBottom="166dp"
        android:layout_marginLeft="8dp"
        android:text="关键字/位置/品牌/酒店名        >"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/show_money"
        android:layout_width="367dp"
        android:layout_height="44dp"
        android:layout_marginBottom="122dp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:text="价格/星级                                   >"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/show_location"
        android:layout_width="309dp"
        android:layout_height="54dp"
        android:layout_marginBottom="263dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="广东东软学院                     >"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/location"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginBottom="263dp"
        android:layout_marginRight="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/local"
        android:layout_marginEnd="7dp" />

    <Button
        android:id="@+id/record"
        android:layout_width="376dp"
        android:layout_height="58dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="4dp"
        android:text="我的订单"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="4dp" />

    <Button
        android:id="@+id/select"
        android:layout_width="271dp"
        android:layout_height="48dp"
        android:layout_marginBottom="63dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/shape"
        android:text="搜索"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="57dp"
        android:layout_height="56dp"
        android:layout_marginBottom="63dp"
        android:layout_marginRight="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/map"
        android:layout_marginEnd="7dp" />
</android.support.constraint.ConstraintLayout>
